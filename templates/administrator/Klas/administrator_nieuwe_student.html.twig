{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <div class="container">

        <h1 class="mt-2 mb-4">Leerlingen <span class="text-muted">in klas {{ klas.naam }}</span></h1>

        <div class="row">

            <div class="col-sm-8">
                {% if klas.students %}
                    <table class="table table-bordered table-striped rounded text-center">

                        <thead>
                        <tr>
                            <th>Naam student</th>
                            <th>Student nummer</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for student in klas.students %}
                            <tr>
                                <td>{{ student.naam }}</td>
                                <td>{{ student.studentId }}</td>
                                <td>
                                    <a href="{{ path('administrator_student_verwijderen',{id: student.id, klasId: student.klas.id}) }}">
                                        <i class="fas fa-user-minus text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <h3><i class="fas fa-exclamation-triangle text-warning"></i> Er zijn nog geen leerlingen toegevoegd
                    </h3>
                {% endif %}
            </div>
            <div class="col border p-2 rounded">

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="add-student btn btn-outline-success w-100"><i class="fas fa-user-plus"></i>
                    Leerling toevoegen
                </button>
                <a href="{{ path('administrator') }}" class="form-control col btn btn-outline-success mt-3">Gereed</a>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}