{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="mt-2 mb-4">Nieuw SLB account</h1>

    <form method="post" action="{{ path('slb') }}">

        <div class="form-group row mt-3 ">
            <label class="col-sm-3">Email:</label>
            <input class="form-control col">
        </div>
        <div class="form-group row mt-3 ">
            <label class="col-sm-3">Voornaam:</label>
            <input class="form-control col">
        </div>
        <div class="form-group row mt-3 ">
            <label class="col-sm-3">Achternaam:</label>
            <input class="form-control col">
        </div>
        <div class="form-group row mt-3 ">
            <label class="col-sm-3">Klas:</label>
            <select class="form-control col">
                <option>2J</option>
                <option>2H</option>
            </select>
        </div>
        <div class="form-group row mt-3 ">
            <label class="col-sm-3"></label>
            <input type="submit" class="form-control col btn btn-outline-success" value="Maak account aan">
        </div>


    </form>

{% endblock %}