{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="mt-2 mb-4">Inschrijven <span class="text-muted">voor 20-02-2020</span></h1>

    <form method="post" action="{{ path('home') }}">

        <div class="form-group row mt-3">
            <label class="col-sm-3">Tijd:</label>
            <select class="form-control col">
                <option>15:15</option>
                <option disabled="disabled">15:30</option>
                <option>15:45</option>
                <option>16:00</option>
            </select>
        </div>
        <div class="form-group row mt-3">
            <label class="col-sm-3">Telefoon nummer:</label>
            <input class="form-control col" placeholder="Telefoon nummer">
        </div>
        <div class="form-group row mt-3 ">
            <label class="col-sm-3">Wie komen er:</label>
            <div class="col">
                <div class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" id="alone" name="radio-stacked" required>
                    <label class="custom-control-label" for="alone">Alleen ik</label>
                </div>
                <div class="custom-control custom-radio mb-3">
                    <input type="radio" class="custom-control-input" id="with_parent" name="radio-stacked" required>
                    <label class="custom-control-label" for="with_parent">Met ouder(s)/verzorger(s)</label>
                </div>
            </div>
        </div>
        <div class="form-group row mt-3">
            <label class="col-sm-3">Email ouder/verzorger:</label>
            <div class="col p-0">
                <input class="form-control" type="email" placeholder="Email ouder/verzorger">
                <small class="text-muted">Optioneel</small>
            </div>
        </div>
        <div class="form-group row mt-3 ">
            <label class="col-sm-3"></label>
            <input type="submit" class="form-control col btn btn-outline-success" value="Verstuur inschrijving">
        </div>


    </form>

{% endblock %}