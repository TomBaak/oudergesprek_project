{% extends 'base.html.twig' %}

{% block body %}

    <div class="container w-75 m-auto">
        <div class="row">
            <div class="col-sm-8">

                <h1 class="text-center p-3"><i class="fas fa-users"></i> Klassen</h1>

                {% if klassen %}

                    <table class="table table-striped table-bordered overflow-auto text-center">

                        <thead>
                        <tr>
                            <th>Klas naam:</th>
                            <th>Aantal studenten:</th>
                            <th>Student(en):</th>
                            <th>Uitnodigingen:</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for klas in klassen %}

                            <tr class="">
                                <td class="col">{{ klas.naam }}</td>
                                <td class="col">{{ klas.students|length }}</td>
                                <td class="col"><a href="{{ path('slb_studenten',{id:klas.id}) }}" class="w-100"><i
                                                class="fas fa-users"></i></a></td>
                                <td class="col"><a href="{{ path('slb_uitnodigingen',{id:klas.id}) }}" class="w-100"><i
                                                class="fas fa-envelope-open-text"></i></a></td>
                            </tr>

                        {% endfor %}
                        </tbody>

                    </table>

                {% else %}
                    <h3 class="text-danger text-center"><i class="fas fa-exclamation-triangle text-warning"></i> Er zijn
                        nog geen klassen aangemaakt</h3>
                {% endif %}

            </div>
            <div class="col">

                <h1 class="text-center p-3"><i class="fas fa-cog"></i> Opties</h1>
                <div class="border w-100 p-3">
                    <a href="{{ path('slb_nieuwe_klas') }}" class="btn btn-success w-100"><i
                                class="fas fa-user-plus"></i> Klas toevoegen</a>
                </div>

            </div>
        </div>
    </div>

{% endblock %}