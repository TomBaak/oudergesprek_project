{% extends 'base.html.twig' %}


{% block backLink %}

    {{ path('home') }}

{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">

            <div class="col">

                <h1 class="mt-4 mb-2"><i class="fas fa-user-plus"></i> Studenten toevoegen</h1>
                <h6 class="text-muted mb-5">Studenten zullen automatisch toegevoegd worden aan de juiste klas die vermeld staat in de lijst</h6>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" class="form-control col btn btn-outline-success" value="Voeg studenten toe">
                {{ form_end(form) }}

            </div>

        </div>

    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init()
        })
    </script>

{% endblock %}


